{
    "name": "astryne/identum-php",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "IdentumPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IdentumPHP\\": "src/"
        }
    },
    "authors": [
        {
            "name": "felipesauer",
            "email": "felipesauer11@hotmail.com"
        }
    ],
    "scripts": {
        "test-pest": "vendor/bin/pest --bail --profile --coverage --strict-coverage --min=100",
        "test-pest-type-coverage": "@composer test-pest -- --type-coverage",
        "test-phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
        "test-phpcs": "./vendor/bin/phpcs src/ --standard=PSR12"
    },
    "require": {
        "php": "^8.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "mockery/mockery": "^1.6",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.87",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
